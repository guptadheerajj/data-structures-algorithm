{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "compile and run",
			"type": "shell",
			"command": "cd '${fileDirname}' && g++ -std=c++17 -o ${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < input.txt > output.txt",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		}
	]
}
